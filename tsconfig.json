{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
